<Page x:Class="VideoTranslationTool.Start_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Start_Page">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Startpage\nDisclaimer\verwendungsrichtilinien" FontSize="50"/>
        <TextBlock Grid.Row="1" Text="Verwendungshinweise"/>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <CheckBox Grid.Row="2" VerticalAlignment="Center"/>
            <Label Content="I accept the agreements"/>
        </StackPanel>
        <Button Grid.Row="3" Content="Continue" Width="100" HorizontalAlignment="Center"/>
    </Grid>
</Page>
